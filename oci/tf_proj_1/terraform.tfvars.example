# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# OCI Authentication
tenancy_ocid     = "ocid1.tenancy.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
user_ocid        = "ocid1.user.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
fingerprint      = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path = "~/.oci/oci_api_key.pem"

# Region
region = "ap-mumbai-1"

# Compartment
compartment_ocid = "ocid1.compartment.oc1..xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Project Configuration
project_name = "apache-server"
environment  = "prod"

# Network Configuration
vcn_cidr          = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Compute Instance
instance_shape = "VM.Standard.E2.1.Micro" # Free tier eligible
# instance_image_ocid = "" # Leave empty to use latest Ubuntu 22.04

# SSH Public Key (paste your public key here)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-key-here"

# Security
allowed_ssh_cidr  = "0.0.0.0/0"  # Restrict to your IP for better security
allowed_http_cidr = "0.0.0.0/0"

# Tags
tags = {
  Project     = "ApacheServer"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
}

